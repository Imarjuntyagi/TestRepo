package PromoTest;

import org.junit.BeforeClass;
import org.openqa.selenium.WebDriver;
import org.testng.annotations.AfterClass;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

import com.aventstack.extentreports.ExtentReports;
import com.aventstack.extentreports.ExtentTest;
import com.aventstack.extentreports.reporter.ExtentHtmlReporter;

public class aa {
	ExtentHtmlReporter htmlReporter;
	public ExtentReports extent;
	ExtentTest extenttest;
	WebDriver driver;

	@BeforeMethod
	public void opening() {
		htmlReporter =new ExtentHtmlReporter("extentreports.html");
		extent = new ExtentReports();
        extent.attachReporter(htmlReporter);


	}

	@Test
	public void met1() {
		extenttest = extent.createTest("Pro", "Thmotion on hul environemnt");
		System.out.println("Heelo one");
		extenttest.pass("one Test Case is staring now");

	}
	
	@Test
	public void met2() {
		extenttest = extent.createTest("Pro2", "sad on hul efefw");
		System.out.println("Heelo two");
		extenttest.pass("sec Test Case is staring now");

	}
	@AfterMethod

	public void last() {
		extent.flush();

	}
}