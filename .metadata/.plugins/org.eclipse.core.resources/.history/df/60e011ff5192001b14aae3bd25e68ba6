package TestCases;

import org.json.simple.JSONObject;
import org.testng.Assert;
import org.testng.annotations.Test;

import io.restassured.RestAssured;
import io.restassured.http.Method;
import io.restassured.response.Response;
import io.restassured.specification.RequestSpecification;

public class Login {
	
	
	@Test
	
	public void reg()
	
	{
		RequestSpecification httpRequest;
		Response response;
		
		
		RestAssured.baseURI = "https://hulstaging.kartrocket.co/index.php?route=feed/api/v1/account/getCustomerStore&key=98f13708210194c475687be6106a3b99";
		httpRequest = RestAssured.given();

		// JSONObject is a class that represents a simple JSON. We can add Key-Value pairs using the put method
		
		JSONObject requestParams = new JSONObject();
		//requestParams.put("prefix", "app_banners_new_v2"); // Cast
		requestParams.put("vendor_id", "44");
		//requestParams.put("delete_keys_2021-04-01", true);
		
		
		// Add a header stating the Request body is a JSON
		httpRequest.header("Content-Type", "application/json");
		httpRequest.header("Cache-Control", "no-cache");
		httpRequest.header("Postman-Token", "a74249b3-97f1-45c0-999c-66d7841bed8a");
		httpRequest.header("x-api-key", "62d64c84d8a1242ed4483cad7d316be0");

		// Add the Json to the body of the request
		httpRequest.body(requestParams.toJSONString());

		response = httpRequest.request(Method.POST, "/register");
		String responseBody = response.getBody().asString();
		System.out.println("responseBody is :" + responseBody);
		//Assert.assertEquals(responseBody.contains(message), true);
		//Assert.assertEquals(responseBody.contains(status), true);
		
		int statusCode = response.getStatusCode(); // Gettng status code
	Assert.assertEquals(statusCode, 200);
//		String statusLine = response.getStatusLine(); // get the  status Line
//		Assert.assertEquals(statusLine, "HTTP/1.1 200 OK");
//		String contentType = response.header("Content-Type");
//		Assert.assertEquals(contentType, "application/json");
//		String contentEncoding = response.header("Content-Encoding");
//		Assert.assertEquals(contentEncoding, "gzip");
		
		
		
		
	}

}
